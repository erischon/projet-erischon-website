---
import skills from "../data/skills";

const { webApp, fullstack, other } = skills[0];
---

<section class="skills">
  <h2 class="title">Mes Stacks</h2>

  <article class="skills-container">
    <p>
      Les technos que je manie le plus fréquemment pour les productions
      front-end :
    </p>
    <div class="skill-list">
      {
        webApp.map((skill) => {
          return (
            <a href={skill.link} target="_blank">
              <img src={`/images/logos/${skill.icon}.svg`} alt={skill.name} />
              <div class="tooltip">
                <span class="skill-title">{skill.name}</span>
                <span class="type">{skill.type}</span>
              </div>
            </a>
          );
        })
      }
    </div>
  </article>

  <article class="skills-container">
    <p>
      Les technos que je manipule pour le façonnage d'application Web Fullstack
      :
    </p>
    <div class="skill-list">
      {
        fullstack.map((skill) => {
          return (
            <a href={skill.link} target="_blank">
              <img src={`/images/logos/${skill.icon}.svg`} alt={skill.name} />
            </a>
          );
        })
      }
    </div>
  </article>

  <article class="skills-container">
    <p>D'autres outils que j'utilise :</p>
    <div class="skill-list">
      {
        other.map((skill) => {
          return (
            <a href={skill.link} target="_blank">
              <img src={`/images/logos/${skill.icon}.svg`} alt={skill.name} />
              <div class="tooltip">
                <span class="skill-title">{skill.name}</span>
                <span class="type">{skill.type}</span>
              </div>
            </a>
          );
        })
      }
    </div>
  </article>
</section>

<style lang="scss">
  @import "../styles/variables.scss";

  .skills {
    margin: 4rem 0;
  }

  article {
    margin: 2rem 0;
  }

  img {
    width: 2.25rem;
    height: 2.25rem;
  }

  .skills-container {
    display: block;
    flex-direction: column;
    gap: 1rem;

    padding: 1.5rem;

    background-color: $clr-background-light;

    p {
      margin-bottom: 1.5rem;
    }

    .skill-list {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;

      a {
        position: relative;

        .tooltip {
          display: none;
          // display: flex;
          flex-direction: column;
          align-items: center;

          border-radius: 0.5rem;
          position: absolute;
          top: -3rem;
          right: -6rem;

          padding: 0.7rem;

          background-color: $clr-background;

          z-index: 1;

          .skill-title {
            width: 100px;
            margin-bottom: 0.5rem;

            color: $clr-text;
            font-size: 0.75rem;
            font-weight: 600;
            text-align: center;
          }

          .type {
            font-size: 0.65rem;
            color: $clr-text-light;

            text-align: center;
          }
        }
      }

      a:hover {
        .tooltip {
          display: flex;
        }
      }
    }

    @media screen and (min-width: 640px) {
      img {
        width: 3rem;
        height: 3rem;
      }

      .skill-list {
        gap: 1.5rem;
      }
    }
  }
</style>
