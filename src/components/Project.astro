---
const { project } = Astro.props;
---

<article class="project">
  {
    project.image && (
      <img class="project-image" src={project.image} alt={project.title} />
    )
  }
  <div class="description">
    <h3>
      {project.title}
    </h3>
    <p>{project.description}</p>
    <a href={project.caseStudyUrl}>DÃ©tail</a>
  </div>
</article>

<style lang="scss">
  @import "src/styles/variables.scss";

  .project {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    margin: 1rem 0;
    width: 100%;

    .project-image {
      max-width: 480px;
      border-radius: 0.5rem;

      @include shadow;
    }

    .description {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      a {
        margin: 0.5rem 0;
      }
    }

    @media screen and (min-width: 640px) {
      flex-direction: row;

      .project-image {
        max-width: 336px;
        border-radius: 0.5rem;
      }
    }
  }
</style>
