---
import arrow from "../assets/icons/arrow.svg";
const { project } = Astro.props;
---

<article class="project">
  <div class="image-container">
    {project.image && <img src={project.image} alt={project.title} />}

    <div class="overlay">
      <div class="text">
        <h3>
          {project.title}
        </h3>
        <p>{project.description}</p>
      </div>
    </div>
  </div>
</article>

<style lang="scss">
  @import "src/styles/variables.scss";

  .project {
    .image-container {
      position: relative;
      // width: 100%;
      max-width: 420px;
      // height: 100%;

      border-radius: 0.5rem;
      overflow: hidden;

      object-fit: center;

      cursor: pointer;

      @include shadow;

      @media screen and (min-width: 768px) {
        max-width: 320px;
      }

      img {
        display: block;

        width: 100%;
        // max-width: 320px;

        object-fit: cover;
        object-position: center;
      }

      &:hover {
        .overlay {
          opacity: 0.9;
        }

        img {
          transform: scale(1.05);
          overflow: hidden;
        }
      }
    }

    .overlay {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      height: 100%;
      width: 100%;
      opacity: 0;
      transition: 0.5s ease;
      background-color: $clr-background-light;
    }

    // .image-container:hover .overlay {
    //   opacity: 0.9;
    // }

    .text {
      color: $clr-white;

      font-size: 20px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
    }

    .description {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      a {
        margin: 0.5rem 0;
      }
    }

    // @media screen and (min-width: 768px) {
    //   flex-direction: row;

    //   .img-container {
    //     max-width: 336px;
    //     border-radius: 0.5rem;
    //   }
    // }
  }
</style>
